<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="6"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="2"
        android:background="#0a8ea8"
        android:gravity="bottom|right"
        android:text=""
        android:textColor="#fff"
        android:textSize="40dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"

        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="40dp"
            android:id="@+id/btn1"
            android:onClick="methodOne"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2"
            android:textSize="40dp"
            android:id="@+id/btn2"
            android:onClick="methodTwo"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="3"
            android:textSize="40dp"
            android:id="@+id/btn3"
            android:onClick="methodThree"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="40dp"
            android:id="@+id/btnPlus"
            android:onClick="methodAdd"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"

        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="40dp"
            android:id="@+id/btn4"
            android:onClick="methodFour"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="40dp"
            android:id="@+id/btn5"
            android:onClick="methodFive"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="40dp"
            android:id="@+id/btn6"
            android:onClick="methodSix"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="40dp"
            android:id="@+id/btnMinus"
            android:onClick="methodSub"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"

        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="40dp"
            android:id="@+id/btn7"
            android:onClick="methodSeven"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="40dp"
            android:id="@+id/btn8"
            android:onClick="methodEight"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="40dp"
            android:id="@+id/btn9"
            android:onClick="methodNine"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="x"
            android:textSize="40dp"
            android:id="@+id/btnMlt"
            android:onClick="methodMul"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="0"
            android:textSize="40dp"
            android:id="@+id/btn0"
            android:onClick="methodZero"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="C"
            android:textSize="40dp"
            android:id="@+id/btnCncl"
            android:onClick="methodCncl"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="40dp"
            android:id="@+id/btnEql"
            android:onClick="methodEql"
            />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="match_parent"
            android:text="/"
            android:textSize="40dp"
            android:id="@+id/btnDvd"
            android:onClick="methodDvd"
            />
    </LinearLayout>
</LinearLayout>